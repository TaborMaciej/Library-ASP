                            <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Wypozyczenia</a></li>
                        }

                    }
                   

                    

                    }


                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Rejestracja" asp-action="Index">Rejestracja</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Książki
                            </a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item"><a class="nav-link text-black" asp-controller="Ksiazka" asp-action="Index">Książki</a></li>
                                <li class="dropdown-item"><a class="nav-link text-black" asp-controller="Gatunek" asp-action="Index">Gatunki</a></li>
