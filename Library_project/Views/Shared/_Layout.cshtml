                                    <li class="dropdown-item"><a class="nav-link text-black" asp-controller="Egzemplarz" asp-action="Index">Egzemplarze</a></li>
                                </ul>
                            </li>
                            <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Wypozyczenia</a></li>
